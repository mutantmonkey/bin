#!/bin/sh
################################################################################
# tahoe-repair-all - Automatic Tahoe-LAFS file repair
#
# author: Kevin Reid <kpreid@mac.com>
################################################################################

for item in `tahoe list-aliases | cut -f 1 -d :`; do
	echo '*** '"$item"
	tahoe deep-check --repair --add-lease $item: | perl -pe 's/^/\t/'
	echo
done
